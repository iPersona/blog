localhost:8880 {
    log /srv/log/proxy.log
    root /srv
    gzip
    #  macOS
    proxy /api/v1 http://docker.for.mac.localhost:8888 {
    # Ubuntu (ifconfig: ip of docker0)
    # proxy /api/v1 http://172.17.0.1:8888 {
        without /api/v1
        header_upstream Host {host}
        header_upstream X-Real-IP {remote}
        header_upstream X-Forwarded-For {remote}
        header_upstream X-Forwarded-Proto {scheme}
    }

    # macOS
    proxy / http://docker.for.mac.localhost:8080 {
    # Ubuntu (ifconfig: ip of docker0)
    # proxy / http://172.17.0.1:8080 {
        header_upstream Host {host}
        header_upstream X-Real-IP {remote}
        header_upstream X-Forwarded-For {remote}
        header_upstream X-Forwarded-Proto {scheme}
    }
}
